{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install requirements",
			"type": "shell",
			"command": "uv sync --locked",
			"problemMatcher": []
		},
		{
			"label": "Unit tests",
			"type": "shell",
			"command": "uv run pytest --cov=. --cov-report xml:coverage.xml",
			"problemMatcher": [],
			"dependsOn": "Install requirements"
		},
		{
			"label": "Reformat code",
			"type": "shell",
			"command": "uv run isort . && uv run ruff format",
			"problemMatcher": [],
			"dependsOn": "Install requirements"
		},
		{
			"label": "Lint code",
			"type": "shell",
			"command": "uv run ruff check .",
			"problemMatcher": [],
			"dependsOn": "Install requirements"
		}
	]
}
